{
  "name": "PWA Splash", // 应用名称
  "short_name": "PWA Splash", // 应用短名称
  "description": "PWA SPlash Screens", // 应用描述
  "scope": ".", // 定义了应用的作用域，点（.）表示当前目录
  "start_url": "/testpwa", // 应用启动时加载的URL
  "display": "standalone", // 显示模式，standalone表示以独立应用模式显示
  "orientation": "portrait", // 默认的显示方向，portrait表示纵向
  "theme_color": "#ffffff", // 主题颜色，这里设置为白色
  "background_color": "#ffffff", // 应用背景颜色，这里设置为白色
  "icons": [ // 应用图标，可以包含多个尺寸和格式的图标
    {
      "src": "images/icons/android-chrome-192x192.png", // 图标文件路径
      "sizes": "192x192", // 图标尺寸
      "type": "image/png" // 图标类型
    },
    {
      "src": "images/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
